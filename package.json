{
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "lint:php": "./vendor/bin/pint --test",
        "lint:php:fix": "./vendor/bin/pint",
        "check": "concurrently -n php,js -c blue,yellow \"npm run lint:php\" \"npm run lint\"",
        "fix": "concurrently -n php,js -c blue,yellow \"npm run lint:php:fix\" \"npm run lint:fix\""
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "autoprefixer": "^10.4.20",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0",
        "tailwindcss": "^4.0.7",
        "vite": "^7.0.4"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.11"
    }
}
